
md-content(flex, layout="column", ng-controller="StatusCtrl", style="height:100%")

  div( layout="column")
    md-toolbar
      div(class="md-toolbar-tools")
        md-button(ng-click="showActive()")
          md-icon(md-svg-icon="images/icons/menu.svg")
        h2 Status

